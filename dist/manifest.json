{
  "manifest_version": 2,
  "name": "FBA Extension",
  "description": "Amazon FBA product finder extension",
  "version": "1.1.1",

  "browser_action": {
    "default_icon": "icon16.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["js/content.js"]
    }
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["tabs"]
}
